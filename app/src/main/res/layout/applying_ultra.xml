<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="#000"
        android:gravity="center"
        android:padding="@dimen/_40sdp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.hookedonplay.decoviewlib.DecoView
                android:id="@+id/dynamicArcView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/completion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFF"
                android:text="0%"
                android:textSize="25sp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:weightSum="6"
        android:background="#000"
        android:layout_marginTop="1dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="20">

            <ImageView
                android:id="@+id/istpic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/circle_grey"/>

            <TextView
                android:id="@+id/ist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18.5"
                android:gravity="center|left"
                android:textColor="#808080"
                android:text="Reverting Brightness from 90%"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="20">

            <ImageView
                android:id="@+id/secpic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/circle_grey"/>

            <TextView
                android:id="@+id/sec"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18.5"
                android:gravity="center|left"
                android:textColor="#808080"
                android:text="Reverting Device Performance"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="20">

            <ImageView
                android:id="@+id/thipic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/circle_grey" />


            <TextView
                android:id="@+id/thi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18.5"
                android:gravity="center|left"
                android:text="Closing Background Apps and Services"
                android:textColor="#808080" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="20">

            <ImageView
                android:id="@+id/foupic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="1.5"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/circle_grey" />


            <TextView
                android:id="@+id/fou"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18.5"
                android:gravity="center|left"
                android:text="Locking Acess To Power Consuming Apps"
                android:textColor="#808080" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="20">

            <ImageView
                android:id="@+id/fifthpic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="1.5"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/circle_grey" />


            <TextView
                android:id="@+id/fif"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18.5"
                android:gravity="center|left"
                android:text="Closing All Power Consuming Functions"
                android:textColor="#808080" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>