<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="#26282D"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="8">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center">

            <ImageView
                android:id="@+id/mainbrush"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/junk_blue"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"/>
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:weightSum="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/maintext"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="CRYSTAL CLEAR"
                android:textSize="@dimen/_25sdp"
                android:gravity="center"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="#24D149"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/mainbutton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/clean"
                android:padding="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:layout_weight="2"
        android:background="#26282D"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/_5sdp">

            <TextView
                android:id="@+id/cachetext"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:text="0 MB"
                android:gravity="center"/>
            
            <ImageView
                android:id="@+id/cache"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/cache2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/_5sdp">

            <TextView
                android:id="@+id/temptext"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:text="0 MB"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/temp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/temp2"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/_5sdp">

            <TextView
                android:id="@+id/residuetext"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:text="0 MB"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/residue"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/res2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/_5sdp">

            <TextView
                android:id="@+id/systemtext"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:text="0 MB"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/system"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/sys2"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>