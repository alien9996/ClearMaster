<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="#27282D">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            android:text="Ultra Power Saving Mode"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pop_up"/>
            <TextView
                android:id="@+id/added"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Add"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textSize="@dimen/_18sdp"/>

            <TextView
                android:id="@+id/addedtime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingTop="@dimen/_50sdp"
                android:text="(+10 h 30m)"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textSize="@dimen/_16sdp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/addedtimedetail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Extended Battery Up ti 10h 30m"
            android:textColor="#FFF"
            android:textSize="@dimen/_16sdp"/>

        <ImageView
            android:id="@+id/applied"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/apply"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="1dp"
        android:background="#000">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#27282D"
            android:foregroundGravity="center"
            android:paddingTop="@dimen/_10sdp"
            android:scrollbars="vertical"
            ></android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>